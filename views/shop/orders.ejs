<%- include('../includes/head.ejs') %>
    </head>
    <link rel="stylesheet" href="/css/orders.css">
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length < 1) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                <li>
                    <h1># <%= order._id %></h1>
                    <ul>
                        <% order.products.forEach(p => { %>
                            <li><%= p.product.title %> (<%= p.quantity %>)</li>
                        <% }); %>
                    </ul>
                </li>
                <% }); %>
            </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>